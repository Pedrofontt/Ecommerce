@page
@model EcommerceSystem.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm mt-5">
            <div class="card-header bg-success text-white text-center">
                <h4 class="mb-0"><i class="bi bi-person-plus"></i> Crear Cuenta</h4>
            </div>
            <div class="card-body p-4">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" 
                               placeholder="email@ejemplo.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label">Contraseña</label>
                        <input asp-for="Input.Password" class="form-control" type="password" 
                               autocomplete="new-password" placeholder="Mínimo 8 caracteres" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <small class="form-text text-muted">
                            Mínimo 8 caracteres, al menos 1 mayúscula y 1 número
                        </small>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Input.ConfirmPassword" class="form-label">Confirmar Contraseña</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" type="password" 
                               autocomplete="new-password" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    
                    <div class="d-grid">
                        <button id="registerSubmit" type="submit" class="btn btn-success btn-lg">
                            <i class="bi bi-person-check"></i> Registrarse
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer bg-light text-center">
                <p class="mb-0">
                    ¿Ya tienes cuenta? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Inicia sesión</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}