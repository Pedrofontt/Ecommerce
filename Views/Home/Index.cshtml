@model IEnumerable<EcommerceSystem.Models.Entities.Producto>

@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center py-5 bg-light mb-5">
    <h1 class="display-4">Bienvenido a Nuestra Tienda</h1>
    <p class="lead">Encuentra los mejores productos al mejor precio</p>
    <a asp-controller="Tienda" asp-action="Index" class="btn btn-primary btn-lg">
        <i class="bi bi-shop"></i> Explorar Tienda
    </a>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <h2>Productos Destacados</h2>
        <hr />
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
        @foreach (var producto in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(producto.ImagenPrincipal))
                    {
                        <img src="@producto.ImagenPrincipal" class="card-img-top" alt="@producto.Nombre" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <img src="/img/productos/default.jpg" class="card-img-top" alt="Sin imagen" style="height: 200px; object-fit: cover;">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@producto.Nombre</h5>
                        <p class="card-text text-muted small">@producto.DescripcionCorta</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="text-primary mb-0">@producto.Precio.ToString("C")</h4>
                            @if (producto.Stock > 0)
                            {
                                <span class="badge bg-success">Disponible</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Agotado</span>
                            }
                        </div>
                    </div>
                    <div class="card-footer bg-white">
                        <a asp-controller="Tienda" asp-action="Producto" asp-route-id="@producto.Id" class="btn btn-outline-primary btn-sm w-100">
                            Ver Detalles
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> No hay productos destacados en este momento.
    </div>
}

<div class="row mt-5 py-5 bg-light">
    <div class="col-md-4 text-center">
        <i class="bi bi-truck" style="font-size: 3rem; color: #0d6efd;"></i>
        <h4 class="mt-3">Envío Gratis</h4>
        <p class="text-muted">En compras mayores a $50</p>
    </div>
    <div class="col-md-4 text-center">
        <i class="bi bi-shield-check" style="font-size: 3rem; color: #198754;"></i>
        <h4 class="mt-3">Compra Segura</h4>
        <p class="text-muted">Protección de datos garantizada</p>
    </div>
    <div class="col-md-4 text-center">
        <i class="bi bi-clock-history" style="font-size: 3rem; color: #ffc107;"></i>
        <h4 class="mt-3">Soporte 24/7</h4>
        <p class="text-muted">Estamos aquí para ayudarte</p>
    </div>
</div>