<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema Ecommerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-cart-check"></i> Ecommerce
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Tienda" asp-action="Index">Tienda</a>
                        </li>
                        @if (User.Identity.IsAuthenticated && (User.IsInRole("Admin") || User.IsInRole("Vendedor")))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-speedometer2"></i> Administración
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Dashboard" asp-action="Index">
                                        <i class="bi bi-speedometer2"></i> Dashboard
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><h6 class="dropdown-header text-muted">Catálogo</h6></li>
                                    <li><a class="dropdown-item" asp-controller="Productos" asp-action="Index">
                                        <i class="bi bi-box-seam"></i> Productos
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Categorias" asp-action="Index">
                                        <i class="bi bi-tags"></i> Categorías
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Marcas" asp-action="Index">
                                        <i class="bi bi-award"></i> Marcas
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Proveedores" asp-action="Index">
                                        <i class="bi bi-truck"></i> Proveedores
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><h6 class="dropdown-header text-muted">Ventas</h6></li>
                                    <li><a class="dropdown-item" asp-controller="Ordenes" asp-action="Index">
                                        <i class="bi bi-cart-check"></i> Órdenes
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Alertas" asp-action="Index">
                                        <i class="bi bi-bell"></i> Alertas de Stock
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><h6 class="dropdown-header text-muted">Reportes</h6></li>
                                    <li><a class="dropdown-item" asp-controller="Reportes" asp-action="Ventas">
                                        <i class="bi bi-graph-up"></i> Reporte de Ventas
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Reportes" asp-action="Inventario">
                                        <i class="bi bi-boxes"></i> Inventario
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Reportes" asp-action="StockBajo">
                                        <i class="bi bi-exclamation-triangle"></i> Stock Bajo
                                    </a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Carrito" asp-action="Index">
                                    <i class="bi bi-cart3"></i> Carrito
                                </a>
                            </li>
                        }
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                <i class="bi bi-check-circle"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Warning"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show mt-3" role="alert">
                <i class="bi bi-info-circle"></i> @TempData["Warning"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show mt-3" role="alert">
                <i class="bi bi-info-circle"></i> @TempData["Info"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <footer class="border-top footer text-muted bg-light mt-5">
        <div class="container py-3">
            <div class="row">
                <div class="col-md-4">
                    <h5><i class="bi bi-cart-check"></i> Sistema Ecommerce</h5>
                    <p class="text-muted small">Plataforma completa de comercio electrónico</p>
                </div>
                <div class="col-md-4">
                    <h6>Enlaces Rápidos</h6>
                    <ul class="list-unstyled small">
                        <li><a asp-controller="Home" asp-action="Index" class="text-decoration-none">Inicio</a></li>
                        <li><a asp-controller="Tienda" asp-action="Index" class="text-decoration-none">Tienda</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Privacidad</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6>Contacto</h6>
                    <p class="text-muted small mb-1">
                        <i class="bi bi-envelope"></i> info@ecommerce.com
                    </p>
                    <p class="text-muted small">
                        <i class="bi bi-telephone"></i> +506 8888-8888
                    </p>
                </div>
            </div>
            <hr>
            <div class="text-center">
                <p class="text-muted small mb-0">&copy; 2025 - EcommerceSystem. Todos los derechos reservados.</p>
            </div>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
