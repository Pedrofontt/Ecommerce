@model IEnumerable<EcommerceSystem.Models.Entities.Categoria>

@{
    ViewData["Title"] = "Categorías";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-tags"></i> Categorías</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nueva Categoría
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Nombre</th>
                            <th>Categoría Padre</th>
                            <th class="text-center">Subcategorías</th>
                            <th class="text-center">Orden</th>
                            <th class="text-center">Estado</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Where(c => c.ParentId == null))
                        {
                            <tr>
                                <td>
                                    <strong><i class="bi bi-folder"></i> @item.Nombre</strong>
                                </td>
                                <td><span class="text-muted">---</span></td>
                                <td class="text-center">
                                    <span class="badge bg-info">@item.Subcategorias.Count</span>
                                </td>
                                <td class="text-center">@item.Orden</td>
                                <td class="text-center">
                                    @if (item.Activo)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactivo</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            
                            @* Subcategorías *@
                            @foreach (var sub in item.Subcategorias.Where(s => s.Activo))
                            {
                                <tr class="table-light">
                                    <td class="ps-5">
                                        <i class="bi bi-arrow-return-right"></i> @sub.Nombre
                                    </td>
                                    <td>@item.Nombre</td>
                                    <td class="text-center">---</td>
                                    <td class="text-center">@sub.Orden</td>
                                    <td class="text-center">
                                        <span class="badge bg-success">Activo</span>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@sub.Id" class="btn btn-outline-info">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@sub.Id" class="btn btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@sub.Id" class="btn btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> No hay categorías registradas.
            </div>
        }
    </div>
</div>