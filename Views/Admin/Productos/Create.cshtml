@model EcommerceSystem.Models.ViewModels.ProductoViewModel

@{
    ViewData["Title"] = "Crear Producto";
}

<div class="row">
    <div class="col-md-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Productos</a></li>
                <li class="breadcrumb-item active">Crear</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Crear Nuevo Producto</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Nombre" class="form-label"></label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Precio" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Precio" class="form-control" step="0.01" />
                            </div>
                            <span asp-validation-for="Precio" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="PrecioComparacion" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="PrecioComparacion" class="form-control" step="0.01" />
                            </div>
                            <small class="form-text text-muted">Precio antes del descuento (opcional)</small>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Stock" class="form-label"></label>
                            <input asp-for="Stock" class="form-control" type="number" min="0" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="StockMinimo" class="form-label"></label>
                            <input asp-for="StockMinimo" class="form-control" type="number" min="0" value="5" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DescripcionCorta" class="form-label"></label>
                        <input asp-for="DescripcionCorta" class="form-control" maxlength="500" />
                        <span asp-validation-for="DescripcionCorta" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Descripcion" class="form-label"></label>
                        <textarea asp-for="Descripcion" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label asp-for="CategoriaId" class="form-label"></label>
                            <select asp-for="CategoriaId" asp-items="Model.Categorias" class="form-select">
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="MarcaId" class="form-label"></label>
                            <select asp-for="MarcaId" asp-items="Model.Marcas" class="form-select">
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="ProveedorId" class="form-label"></label>
                            <select asp-for="ProveedorId" asp-items="Model.Proveedores" class="form-select">
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImagenFile" class="form-label"></label>
                        <input asp-for="ImagenFile" class="form-control" type="file" accept="image/*" />
                        <small class="form-text text-muted">Formatos permitidos: JPG, PNG, WEBP, GIF</small>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-check form-switch">
                                <input asp-for="Destacado" class="form-check-input" type="checkbox" />
                                <label asp-for="Destacado" class="form-check-label"></label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check form-switch">
                                <input asp-for="Activo" class="form-check-input" type="checkbox" checked />
                                <label asp-for="Activo" class="form-check-label"></label>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Guardar Producto
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-lightbulb"></i> Ayuda</h5>
            </div>
            <div class="card-body">
                <h6>Consejos:</h6>
                <ul class="small">
                    <li>El <strong>SKU</strong> se genera automáticamente</li>
                    <li>La <strong>Descripción Corta</strong> se muestra en listados</li>
                    <li>La <strong>Descripción</strong> completa se muestra en detalles</li>
                    <li>Marca como <strong>Destacado</strong> para mostrar en la página principal</li>
                    <li>El <strong>Stock Mínimo</strong> genera alertas automáticas</li>
                </ul>

                <hr />

                <h6>Imagen del Producto:</h6>
                <div class="text-center">
                    <img id="imagePreview" src="/img/productos/default.jpg" class="img-fluid rounded" alt="Vista previa" />
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Vista previa de imagen
        document.querySelector('input[type="file"]').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('imagePreview').src = e.target.result;
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
}