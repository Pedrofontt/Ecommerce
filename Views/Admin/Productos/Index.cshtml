@model EcommerceSystem.Utilities.PaginatedList<EcommerceSystem.Models.Entities.Producto>

@{
    ViewData["Title"] = "Gestión de Productos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-box-seam"></i> Productos</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nuevo Producto
    </a>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" 
                           class="form-control" placeholder="Buscar por nombre, SKU, categoría o marca...">
                </div>
            </div>
            <div class="col-md-3">
                <select name="sortOrder" class="form-select">
                    <option value="">Ordenar por...</option>
                    <option value="nombre_desc" selected="@(ViewData["CurrentSort"]?.ToString() == "nombre_desc")">Nombre (Z-A)</option>
                    <option value="precio_asc" selected="@(ViewData["CurrentSort"]?.ToString() == "precio_asc")">Precio (Menor a Mayor)</option>
                    <option value="precio_desc" selected="@(ViewData["CurrentSort"]?.ToString() == "precio_desc")">Precio (Mayor a Menor)</option>
                    <option value="stock_asc" selected="@(ViewData["CurrentSort"]?.ToString() == "stock_asc")">Stock (Menor a Mayor)</option>
                    <option value="stock_desc" selected="@(ViewData["CurrentSort"]?.ToString() == "stock_desc")">Stock (Mayor a Menor)</option>
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-outline-primary w-100">
                    <i class="bi bi-funnel"></i> Filtrar
                </button>
            </div>
        </form>
    </div>
</div>

@if (Model.Any())
{
    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 80px;">Imagen</th>
                        <th>SKU</th>
                        <th>Nombre</th>
                        <th>Categoría</th>
                        <th>Marca</th>
                        <th class="text-end">Precio</th>
                        <th class="text-center">Stock</th>
                        <th class="text-center">Estado</th>
                        <th class="text-end" style="width: 200px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImagenPrincipal))
                                {
                                    <img src="@item.ImagenPrincipal" alt="@item.Nombre" class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;">
                                }
                                else
                                {
                                    <img src="/img/productos/default.jpg" alt="Sin imagen" class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;">
                                }
                            </td>
                            <td>
                                <small class="text-muted">@item.SKU</small>
                            </td>
                            <td>
                                <strong>@item.Nombre</strong>
                                @if (item.Destacado)
                                {
                                    <span class="badge bg-warning text-dark ms-1">
                                        <i class="bi bi-star-fill"></i>
                                    </span>
                                }
                            </td>
                            <td>
                                @if (item.Categoria != null)
                                {
                                    <span class="badge bg-secondary">@item.Categoria.Nombre</span>
                                }
                            </td>
                            <td>
                                @if (item.Marca != null)
                                {
                                    <span class="badge bg-info">@item.Marca.Nombre</span>
                                }
                            </td>
                            <td class="text-end">
                                <strong>@item.Precio.ToString("C")</strong>
                            </td>
                            <td class="text-center">
                                @if (item.Stock <= item.StockMinimo)
                                {
                                    <span class="badge bg-danger">@item.Stock</span>
                                }
                                else if (item.Stock <= item.StockMinimo * 2)
                                {
                                    <span class="badge bg-warning text-dark">@item.Stock</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">@item.Stock</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (item.Activo)
                                {
                                    <span class="badge bg-success">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactivo</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" title="Ver">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Paginación -->
    <nav aria-label="Paginación de productos" class="mt-4">
        <ul class="pagination justify-content-center">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-pageNumber="@(Model.PageIndex - 1)"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       class="page-link">
                        <i class="bi bi-chevron-left"></i> Anterior
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link"><i class="bi bi-chevron-left"></i> Anterior</span>
                </li>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                @if (i == Model.PageIndex)
                {
                    <li class="page-item active">
                        <span class="page-link">@i</span>
                    </li>
                }
                else if (i == 1 || i == Model.TotalPages || (i >= Model.PageIndex - 2 && i <= Model.PageIndex + 2))
                {
                    <li class="page-item">
                        <a asp-action="Index"
                           asp-route-sortOrder="@ViewData["CurrentSort"]"
                           asp-route-pageNumber="@i"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                           class="page-link">@i</a>
                    </li>
                }
                else if (i == Model.PageIndex - 3 || i == Model.PageIndex + 3)
                {
                    <li class="page-item disabled">
                        <span class="page-link">...</span>
                    </li>
                }
            }

            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-pageNumber="@(Model.PageIndex + 1)"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       class="page-link">
                        Siguiente <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">Siguiente <i class="bi bi-chevron-right"></i></span>
                </li>
            }
        </ul>
    </nav>

    <div class="text-muted text-center">
        Mostrando @Model.Count de @Model.TotalItems productos (Página @Model.PageIndex de @Model.TotalPages)
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> No se encontraron productos.
        @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
        {
            <a asp-action="Index" class="alert-link">Limpiar filtro</a>
        }
    </div>
}