@model EcommerceSystem.Models.Entities.Marca
@{
    ViewData["Title"] = "Editar Marca";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="bi bi-pencil"></i> Editar Marca</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="Index" class="btn btn-secondary me-2">
            <i class="bi bi-arrow-left"></i> Volver al Listado
        </a>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
            <i class="bi bi-eye"></i> Ver Detalles
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h5><i class="bi bi-award"></i> @Model.Nombre</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Logo" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- Información básica -->
                    <h5 class="mb-3"><i class="bi bi-info-circle"></i> Información de la Marca</h5>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label asp-for="Nombre" class="form-label">Nombre de la Marca *</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Nombre de la marca">
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label asp-for="Descripcion" class="form-label">Descripción</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3" 
                                      placeholder="Descripción de la marca, historia o características"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>
                    </div>

                    <hr class="my-4">

                    <!-- Logo actual -->
                    @if (!string.IsNullOrEmpty(Model.Logo))
                    {
                        <h5 class="mb-3"><i class="bi bi-image"></i> Logo Actual</h5>
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="border rounded p-3 bg-light">
                                    <img src="@Model.Logo" alt="@Model.Nombre" 
                                         style="max-width: 300px; max-height: 150px;" class="d-block mb-2">
                                    <small class="text-muted">
                                        <i class="bi bi-info-circle"></i> 
                                        Para cambiar el logo, contacte al administrador del sistema
                                    </small>
                                </div>
                            </div>
                        </div>
                        <hr class="my-4">
                    }

                    <!-- Estado -->
                    <h5 class="mb-3"><i class="bi bi-toggle-on"></i> Estado</h5>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <div class="form-check form-switch">
                                <input asp-for="Activo" class="form-check-input" type="checkbox">
                                <label asp-for="Activo" class="form-check-label">Marca Activa</label>
                            </div>
                            <small class="text-muted">Las marcas inactivas no aparecerán en los formularios de productos</small>
                        </div>
                    </div>

                    <hr class="my-4">

                    <!-- Botones -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-save"></i> Guardar Cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Panel lateral con información -->
    <div class="col-md-4">
        <div class="card bg-info text-white">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-info-circle"></i> Información</h5>
                <ul class="small mb-0">
                    <li>ID de la Marca: <strong>@Model.Id</strong></li>
                    <li>Productos Asociados: <strong>@(Model.Productos?.Count ?? 0)</strong></li>
                </ul>
            </div>
        </div>

        @if (Model.Productos != null && Model.Productos.Any())
        {
            <div class="card mt-3">
                <div class="card-header bg-light">
                    <h6><i class="bi bi-box-seam"></i> Productos de Esta Marca</h6>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush" style="max-height: 300px; overflow-y: auto;">
                        @foreach (var producto in Model.Productos.Take(10))
                        {
                            <div class="list-group-item px-0 py-2">
                                <small>
                                    <strong>@producto.Nombre</strong>
                                    <br>
                                    <span class="text-muted">SKU: @producto.SKU</span>
                                    <br>
                                    <span class="text-success">@producto.Precio.ToString("C")</span>
                                    @if (producto.Stock <= producto.StockMinimo)
                                    {
                                        <span class="badge bg-warning text-dark ms-1">Stock Bajo</span>
                                    }
                                </small>
                            </div>
                        }
                        @if (Model.Productos.Count > 10)
                        {
                            <div class="list-group-item px-0 py-2 text-center">
                                <small class="text-muted">Y @(Model.Productos.Count - 10) más...</small>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }

        <div class="card bg-warning text-dark mt-3">
            <div class="card-body">
                <h6 class="card-title"><i class="bi bi-exclamation-triangle"></i> Atención</h6>
                <p class="small mb-0">
                    @if (Model.Productos != null && Model.Productos.Any())
                    {
                        <span>Esta marca tiene @Model.Productos.Count producto(s) asociado(s). 
                              Al desactivarla, no podrá seleccionarla para nuevos productos.</span>
                    }
                    else
                    {
                        <span>Esta marca no tiene productos asociados.</span>
                    }
                </p>
            </div>
        </div>

        <div class="card bg-light mt-3">
            <div class="card-body">
                <h6 class="card-title"><i class="bi bi-lightbulb"></i> Consejos</h6>
                <ul class="small mb-0">
                    <li>Use nombres cortos y reconocibles</li>
                    <li>La descripción ayuda a identificar la marca</li>
                    <li>Desactive marcas obsoletas en lugar de eliminarlas</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
