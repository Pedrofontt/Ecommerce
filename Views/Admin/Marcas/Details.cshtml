@model EcommerceSystem.Models.Entities.Marca
@{
    ViewData["Title"] = "Detalles de Marca";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="bi bi-award"></i> Detalles de Marca</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="Index" class="btn btn-secondary me-2">
            <i class="bi bi-arrow-left"></i> Volver al Listado
        </a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
            <i class="bi bi-pencil"></i> Editar
        </a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
            <i class="bi bi-trash"></i> Eliminar
        </a>
    </div>
</div>

<div class="row">
    <!-- Información principal -->
    <div class="col-md-8">
        <div class="card">
            <div class="card-header @(Model.Activo ? "bg-success" : "bg-secondary") text-white">
                <div class="d-flex align-items-center">
                    @if (!string.IsNullOrEmpty(Model.Logo))
                    {
                        <img src="@Model.Logo" alt="@Model.Nombre" style="height: 50px; max-width: 150px; object-fit: contain;" class="me-3 bg-white p-2 rounded">
                    }
                    <div>
                        <h4 class="mb-0">
                            @Model.Nombre
                            @if (Model.Activo)
                            {
                                <span class="badge bg-light text-success ms-2">
                                    <i class="bi bi-check-circle"></i> Activa
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-light text-secondary ms-2">
                                    <i class="bi bi-x-circle"></i> Inactiva
                                </span>
                            }
                        </h4>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <!-- Información de la marca -->
                <h5 class="mb-3"><i class="bi bi-info-circle"></i> Información General</h5>
                
                <div class="row mb-3">
                    <div class="col-md-12">
                        <label class="text-muted small">Descripción</label>
                        <p class="mb-0">
                            @if (!string.IsNullOrEmpty(Model.Descripcion))
                            {
                                <span>@Model.Descripcion</span>
                            }
                            else
                            {
                                <span class="text-muted">Sin descripción</span>
                            }
                        </p>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Logo))
                {
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label class="text-muted small">Logo</label>
                            <div>
                                <img src="@Model.Logo" alt="@Model.Nombre" style="max-width: 300px; max-height: 150px;" class="border rounded p-2">
                            </div>
                        </div>
                    </div>
                }

                <hr class="my-4">

                <!-- Productos de la marca -->
                <h5 class="mb-3">
                    <i class="bi bi-box-seam"></i> Productos 
                    <span class="badge bg-primary">@(Model.Productos?.Count ?? 0)</span>
                </h5>

                @if (Model.Productos != null && Model.Productos.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover table-sm">
                            <thead>
                                <tr>
                                    <th>Imagen</th>
                                    <th>SKU</th>
                                    <th>Producto</th>
                                    <th>Categoría</th>
                                    <th>Stock</th>
                                    <th>Precio</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var producto in Model.Productos.Take(20))
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(producto.ImagenPrincipal))
                                            {
                                                <img src="@producto.ImagenPrincipal" alt="@producto.Nombre" 
                                                     style="width: 40px; height: 40px; object-fit: cover;" class="rounded">
                                            }
                                            else
                                            {
                                                <div class="bg-secondary rounded d-flex align-items-center justify-content-center" 
                                                     style="width: 40px; height: 40px;">
                                                    <i class="bi bi-image text-white small"></i>
                                                </div>
                                            }
                                        </td>
                                        <td><code>@producto.SKU</code></td>
                                        <td>
                                            <strong>@producto.Nombre</strong>
                                            @if (producto.Destacado)
                                            {
                                                <span class="badge bg-warning text-dark ms-1">
                                                    <i class="bi bi-star-fill"></i>
                                                </span>
                                            }
                                        </td>
                                        <td>@(producto.Categoria?.Nombre ?? "N/A")</td>
                                        <td>
                                            @if (producto.Stock == 0)
                                            {
                                                <span class="badge bg-danger">@producto.Stock</span>
                                            }
                                            else if (producto.Stock <= producto.StockMinimo)
                                            {
                                                <span class="badge bg-warning text-dark">@producto.Stock</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">@producto.Stock</span>
                                            }
                                        </td>
                                        <td><strong>@producto.Precio.ToString("C")</strong></td>
                                        <td>
                                            @if (producto.Activo)
                                            {
                                                <span class="badge bg-success">Activo</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactivo</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            @if (Model.Productos.Count > 20)
                            {
                                <tfoot>
                                    <tr>
                                        <td colspan="7" class="text-center text-muted">
                                            <small>Mostrando 20 de @Model.Productos.Count productos</small>
                                        </td>
                                    </tr>
                                </tfoot>
                            }
                            <tfoot class="table-light">
                                <tr>
                                    <td colspan="5" class="text-end"><strong>Valor Total Inventario:</strong></td>
                                    <td colspan="2">
                                        <strong>@Model.Productos.Sum(p => p.Stock * p.Precio).ToString("C")</strong>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info text-center">
                        <i class="bi bi-info-circle fs-1 d-block mb-2"></i>
                        <h5>Esta marca no tiene productos asociados</h5>
                        <p class="mb-0">Agregue productos de esta marca para verlos aquí</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Panel lateral con estadísticas -->
    <div class="col-md-4">
        <!-- Información general -->
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h6 class="mb-0"><i class="bi bi-info-circle"></i> Información</h6>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-5">ID:</dt>
                    <dd class="col-sm-7"><code>@Model.Id</code></dd>

                    <dt class="col-sm-5">Estado:</dt>
                    <dd class="col-sm-7">
                        @if (Model.Activo)
                        {
                            <span class="badge bg-success">Activa</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactiva</span>
                        }
                    </dd>

                    <dt class="col-sm-5">Productos:</dt>
                    <dd class="col-sm-7">
                        <span class="badge bg-primary">@(Model.Productos?.Count ?? 0)</span>
                    </dd>

                    <dt class="col-sm-5">Logo:</dt>
                    <dd class="col-sm-7">
                        @if (!string.IsNullOrEmpty(Model.Logo))
                        {
                            <span class="badge bg-success"><i class="bi bi-check"></i> Sí</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary"><i class="bi bi-x"></i> No</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        <!-- Estadísticas de productos -->
        @if (Model.Productos != null && Model.Productos.Any())
        {
            <div class="card mt-3">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0"><i class="bi bi-graph-up"></i> Estadísticas de Productos</h6>
                </div>
                <div class="card-body">
                    <dl class="row mb-0 small">
                        <dt class="col-sm-7">Total Productos:</dt>
                        <dd class="col-sm-5 text-end">
                            <strong>@Model.Productos.Count</strong>
                        </dd>

                        <dt class="col-sm-7">Stock Total:</dt>
                        <dd class="col-sm-5 text-end">
                            <strong>@Model.Productos.Sum(p => p.Stock)</strong>
                        </dd>

                        <dt class="col-sm-7">Valor Inventario:</dt>
                        <dd class="col-sm-5 text-end">
                            <strong>@Model.Productos.Sum(p => p.Stock * p.Precio).ToString("C")</strong>
                        </dd>

                        <dt class="col-sm-7">Precio Promedio:</dt>
                        <dd class="col-sm-5 text-end">
                            <strong>@Model.Productos.Average(p => p.Precio).ToString("C")</strong>
                        </dd>

                        <dt class="col-sm-7">Stock Bajo:</dt>
                        <dd class="col-sm-5 text-end">
                            <span class="badge bg-warning text-dark">
                                @Model.Productos.Count(p => p.Stock <= p.StockMinimo)
                            </span>
                        </dd>

                        <dt class="col-sm-7">Sin Stock:</dt>
                        <dd class="col-sm-5 text-end">
                            <span class="badge bg-danger">
                                @Model.Productos.Count(p => p.Stock == 0)
                            </span>
                        </dd>

                        <dt class="col-sm-7">Destacados:</dt>
                        <dd class="col-sm-5 text-end">
                            <span class="badge bg-warning text-dark">
                                @Model.Productos.Count(p => p.Destacado)
                            </span>
                        </dd>

                        <dt class="col-sm-7">Activos:</dt>
                        <dd class="col-sm-5 text-end">
                            <span class="badge bg-success">
                                @Model.Productos.Count(p => p.Activo)
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Top 5 productos más caros -->
            <div class="card mt-3 bg-light">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-currency-dollar"></i> Top 5 Más Caros</h6>
                    <div class="list-group list-group-flush">
                        @foreach (var producto in Model.Productos.OrderByDescending(p => p.Precio).Take(5))
                        {
                            <div class="list-group-item px-0 py-2">
                                <small>
                                    <strong>@producto.Nombre</strong>
                                    <br>
                                    <span class="text-success">@producto.Precio.ToString("C")</span>
                                    <span class="text-muted">- Stock: @producto.Stock</span>
                                </small>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }

        <!-- Acciones rápidas -->
        <div class="card mt-3 bg-info text-white">
            <div class="card-body">
                <h6 class="card-title"><i class="bi bi-lightning"></i> Acciones Rápidas</h6>
                <div class="d-grid gap-2">
                    <a asp-controller="Productos" asp-action="Index" class="btn btn-sm btn-light">
                        <i class="bi bi-box-seam"></i> Ver Productos de Esta Marca
                    </a>
                    <a asp-controller="Productos" asp-action="Create" class="btn btn-sm btn-light">
                        <i class="bi bi-plus-circle"></i> Agregar Nuevo Producto
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
