@model EcommerceSystem.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Dashboard</h1>
</div>

<!-- Tarjetas de resumen -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-cash-stack"></i> Ventas Hoy</h5>
                <p class="card-text display-6">@Model.VentasHoy.ToString("C")</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-calendar-week"></i> Ventas Semana</h5>
                <p class="card-text display-6">@Model.VentasSemana.ToString("C")</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-calendar-month"></i> Ventas Mes</h5>
                <p class="card-text display-6">@Model.VentasMes.ToString("C")</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-cart-check"></i> Órdenes Hoy</h5>
                <p class="card-text display-6">@Model.OrdenesHoy</p>
            </div>
        </div>
    </div>
</div>

<!-- Segunda fila de tarjetas -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card border-warning mb-3">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-hourglass-split"></i> Órdenes Pendientes</h5>
                <p class="card-text display-4 text-warning">@Model.OrdenesPendientes</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card border-danger mb-3">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-exclamation-triangle"></i> Productos Stock Bajo</h5>
                <p class="card-text display-4 text-danger">@Model.ProductosStockBajo</p>
            </div>
        </div>
    </div>
</div>

<!-- Alertas de Stock -->
@if (Model.AlertasRecientes != null && Model.AlertasRecientes.Any())
{
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h5><i class="bi bi-bell-fill"></i> Alertas de Stock Bajo</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Stock Actual</th>
                                    <th>Stock Mínimo</th>
                                    <th>Mensaje</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var alerta in Model.AlertasRecientes)
                                {
                                    <tr>
                                        <td><strong>@alerta.ProductoNombre</strong></td>
                                        <td><span class="badge bg-danger">@alerta.StockActual</span></td>
                                        <td>@alerta.StockMinimo</td>
                                        <td>@alerta.Mensaje</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Productos más vendidos -->
@if (Model.ProductosMasVendidos != null && Model.ProductosMasVendidos.Any())
{
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5><i class="bi bi-trophy-fill"></i> Productos Más Vendidos</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Cantidad Vendida</th>
                                    <th>Total Ventas</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var producto in Model.ProductosMasVendidos)
                                {
                                    <tr>
                                        <td>@producto.Nombre</td>
                                        <td><span class="badge bg-success">@producto.CantidadVendida</span></td>
                                        <td><strong>@producto.TotalVentas.ToString("C")</strong></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Ventas por día -->
@if (Model.VentasPorDia != null && Model.VentasPorDia.Any())
{
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5><i class="bi bi-graph-up"></i> Ventas de los Últimos Días</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Fecha</th>
                                    <th>Total Ventas</th>
                                    <th>Número de Órdenes</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var venta in Model.VentasPorDia)
                                {
                                    <tr>
                                        <td>@venta.Fecha.ToString("dd/MM/yyyy")</td>
                                        <td><strong>@venta.Total.ToString("C")</strong></td>
                                        <td><span class="badge bg-info">@venta.NumeroOrdenes</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}