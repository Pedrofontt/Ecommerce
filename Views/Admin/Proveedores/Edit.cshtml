@model EcommerceSystem.Models.Entities.Proveedor
@{
    ViewData["Title"] = "Editar Proveedor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="bi bi-pencil"></i> Editar Proveedor</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="Index" class="btn btn-secondary me-2">
            <i class="bi bi-arrow-left"></i> Volver al Listado
        </a>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
            <i class="bi bi-eye"></i> Ver Detalles
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h5><i class="bi bi-building"></i> @Model.Nombre</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- Información básica -->
                    <h5 class="mb-3"><i class="bi bi-building"></i> Información del Proveedor</h5>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label asp-for="Nombre" class="form-label">Nombre del Proveedor *</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Nombre o razón social">
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                    </div>

                    <hr class="my-4">

                    <!-- Información de contacto -->
                    <h5 class="mb-3"><i class="bi bi-person-lines-fill"></i> Información de Contacto</h5>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Contacto" class="form-label">Persona de Contacto</label>
                            <input asp-for="Contacto" class="form-control" placeholder="Nombre del contacto">
                            <span asp-validation-for="Contacto" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Telefono" class="form-label">Teléfono</label>
                            <input asp-for="Telefono" class="form-control" placeholder="Número de teléfono">
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="correo@ejemplo.com">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label asp-for="Direccion" class="form-label">Dirección</label>
                            <textarea asp-for="Direccion" class="form-control" rows="2" 
                                      placeholder="Dirección física del proveedor"></textarea>
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>
                    </div>

                    <hr class="my-4">

                    <!-- Estado -->
                    <h5 class="mb-3"><i class="bi bi-toggle-on"></i> Estado</h5>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <div class="form-check form-switch">
                                <input asp-for="Activo" class="form-check-input" type="checkbox">
                                <label asp-for="Activo" class="form-check-label">Proveedor Activo</label>
                            </div>
                            <small class="text-muted">Los proveedores inactivos no aparecerán en los formularios de productos</small>
                        </div>
                    </div>

                    <hr class="my-4">

                    <!-- Botones -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-save"></i> Guardar Cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Panel lateral con información -->
    <div class="col-md-4">
        <div class="card bg-info text-white">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-info-circle"></i> Información</h5>
                <ul class="small mb-0">
                    <li>ID del Proveedor: <strong>@Model.Id</strong></li>
                    <li>Productos Asociados: <strong>@(Model.Productos?.Count ?? 0)</strong></li>
                </ul>
            </div>
        </div>

        @if (Model.Productos != null && Model.Productos.Any())
        {
            <div class="card mt-3">
                <div class="card-header bg-light">
                    <h6><i class="bi bi-box-seam"></i> Productos Suministrados</h6>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush" style="max-height: 300px; overflow-y: auto;">
                        @foreach (var producto in Model.Productos.Take(10))
                        {
                            <div class="list-group-item px-0 py-2">
                                <small>
                                    <i class="bi bi-box"></i> @producto.Nombre
                                    <br>
                                    <span class="text-muted">SKU: @producto.SKU</span>
                                </small>
                            </div>
                        }
                        @if (Model.Productos.Count > 10)
                        {
                            <div class="list-group-item px-0 py-2 text-center">
                                <small class="text-muted">Y @(Model.Productos.Count - 10) más...</small>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }

        <div class="card bg-warning text-dark mt-3">
            <div class="card-body">
                <h6 class="card-title"><i class="bi bi-exclamation-triangle"></i> Atención</h6>
                <p class="small mb-0">
                    @if (Model.Productos != null && Model.Productos.Any())
                    {
                        <span>Este proveedor tiene @Model.Productos.Count producto(s) asociado(s). 
                              Al desactivarlo, no podrá seleccionarlo para nuevos productos.</span>
                    }
                    else
                    {
                        <span>Este proveedor no tiene productos asociados.</span>
                    }
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
