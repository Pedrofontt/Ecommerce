@model EcommerceSystem.Models.Entities.Proveedor
@{
    ViewData["Title"] = "Detalles del Proveedor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="bi bi-building"></i> Detalles del Proveedor</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="Index" class="btn btn-secondary me-2">
            <i class="bi bi-arrow-left"></i> Volver al Listado
        </a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
            <i class="bi bi-pencil"></i> Editar
        </a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
            <i class="bi bi-trash"></i> Eliminar
        </a>
    </div>
</div>

<div class="row">
    <!-- Información principal -->
    <div class="col-md-8">
        <div class="card">
            <div class="card-header @(Model.Activo ? "bg-success" : "bg-secondary") text-white">
                <h4 class="mb-0">
                    @Model.Nombre
                    @if (Model.Activo)
                    {
                        <span class="badge bg-light text-success ms-2">
                            <i class="bi bi-check-circle"></i> Activo
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-light text-secondary ms-2">
                            <i class="bi bi-x-circle"></i> Inactivo
                        </span>
                    }
                </h4>
            </div>
            <div class="card-body">
                <!-- Información de contacto -->
                <h5 class="mb-3"><i class="bi bi-person-lines-fill"></i> Información de Contacto</h5>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="text-muted small">Persona de Contacto</label>
                        <p class="mb-0">
                            @if (!string.IsNullOrEmpty(Model.Contacto))
                            {
                                <strong><i class="bi bi-person"></i> @Model.Contacto</strong>
                            }
                            else
                            {
                                <span class="text-muted">No especificado</span>
                            }
                        </p>
                    </div>
                    <div class="col-md-6">
                        <label class="text-muted small">Teléfono</label>
                        <p class="mb-0">
                            @if (!string.IsNullOrEmpty(Model.Telefono))
                            {
                                <strong><i class="bi bi-telephone"></i> @Model.Telefono</strong>
                            }
                            else
                            {
                                <span class="text-muted">No especificado</span>
                            }
                        </p>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <label class="text-muted small">Email</label>
                        <p class="mb-0">
                            @if (!string.IsNullOrEmpty(Model.Email))
                            {
                                <strong>
                                    <i class="bi bi-envelope"></i> 
                                    <a href="mailto:@Model.Email">@Model.Email</a>
                                </strong>
                            }
                            else
                            {
                                <span class="text-muted">No especificado</span>
                            }
                        </p>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <label class="text-muted small">Dirección</label>
                        <p class="mb-0">
                            @if (!string.IsNullOrEmpty(Model.Direccion))
                            {
                                <strong><i class="bi bi-geo-alt"></i> @Model.Direccion</strong>
                            }
                            else
                            {
                                <span class="text-muted">No especificada</span>
                            }
                        </p>
                    </div>
                </div>

                <hr class="my-4">

                <!-- Productos suministrados -->
                <h5 class="mb-3">
                    <i class="bi bi-box-seam"></i> Productos Suministrados 
                    <span class="badge bg-primary">@(Model.Productos?.Count ?? 0)</span>
                </h5>

                @if (Model.Productos != null && Model.Productos.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover table-sm">
                            <thead>
                                <tr>
                                    <th>SKU</th>
                                    <th>Producto</th>
                                    <th>Categoría</th>
                                    <th>Stock</th>
                                    <th>Precio</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var producto in Model.Productos)
                                {
                                    <tr>
                                        <td><code>@producto.SKU</code></td>
                                        <td>
                                            <strong>@producto.Nombre</strong>
                                            @if (producto.Destacado)
                                            {
                                                <span class="badge bg-warning text-dark ms-1">
                                                    <i class="bi bi-star-fill"></i>
                                                </span>
                                            }
                                        </td>
                                        <td>@(producto.Categoria?.Nombre ?? "N/A")</td>
                                        <td>
                                            @if (producto.Stock == 0)
                                            {
                                                <span class="badge bg-danger">@producto.Stock</span>
                                            }
                                            else if (producto.Stock <= producto.StockMinimo)
                                            {
                                                <span class="badge bg-warning text-dark">@producto.Stock</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">@producto.Stock</span>
                                            }
                                        </td>
                                        <td><strong>@producto.Precio.ToString("C")</strong></td>
                                        <td>
                                            @if (producto.Activo)
                                            {
                                                <span class="badge bg-success">Activo</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactivo</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-light">
                                    <td colspan="4" class="text-end"><strong>Valor Total:</strong></td>
                                    <td colspan="2">
                                        <strong>@Model.Productos.Sum(p => p.Stock * p.Precio).ToString("C")</strong>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Este proveedor no tiene productos asociados.
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Panel lateral con estadísticas -->
    <div class="col-md-4">
        <!-- Información general -->
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h6 class="mb-0"><i class="bi bi-info-circle"></i> Información General</h6>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-5">ID:</dt>
                    <dd class="col-sm-7"><code>@Model.Id</code></dd>

                    <dt class="col-sm-5">Estado:</dt>
                    <dd class="col-sm-7">
                        @if (Model.Activo)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactivo</span>
                        }
                    </dd>

                    <dt class="col-sm-5">Productos:</dt>
                    <dd class="col-sm-7">
                        <span class="badge bg-info">@(Model.Productos?.Count ?? 0)</span>
                    </dd>
                </dl>
            </div>
        </div>

        <!-- Estadísticas de productos -->
        @if (Model.Productos != null && Model.Productos.Any())
        {
            <div class="card mt-3">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0"><i class="bi bi-graph-up"></i> Estadísticas</h6>
                </div>
                <div class="card-body">
                    <dl class="row mb-0 small">
                        <dt class="col-sm-7">Total Productos:</dt>
                        <dd class="col-sm-5 text-end">
                            <strong>@Model.Productos.Count</strong>
                        </dd>

                        <dt class="col-sm-7">Stock Total:</dt>
                        <dd class="col-sm-5 text-end">
                            <strong>@Model.Productos.Sum(p => p.Stock)</strong>
                        </dd>

                        <dt class="col-sm-7">Valor Inventario:</dt>
                        <dd class="col-sm-5 text-end">
                            <strong>@Model.Productos.Sum(p => p.Stock * p.Precio).ToString("C")</strong>
                        </dd>

                        <dt class="col-sm-7">Stock Bajo:</dt>
                        <dd class="col-sm-5 text-end">
                            <span class="badge bg-warning text-dark">
                                @Model.Productos.Count(p => p.Stock <= p.StockMinimo)
                            </span>
                        </dd>

                        <dt class="col-sm-7">Sin Stock:</dt>
                        <dd class="col-sm-5 text-end">
                            <span class="badge bg-danger">
                                @Model.Productos.Count(p => p.Stock == 0)
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>
        }

        <!-- Acciones rápidas -->
        <div class="card mt-3 bg-light">
            <div class="card-body">
                <h6 class="card-title"><i class="bi bi-lightning"></i> Acciones Rápidas</h6>
                <div class="d-grid gap-2">
                    @if (!string.IsNullOrEmpty(Model.Email))
                    {
                        <a href="mailto:@Model.Email" class="btn btn-sm btn-primary">
                            <i class="bi bi-envelope"></i> Enviar Email
                        </a>
                    }
                    @if (!string.IsNullOrEmpty(Model.Telefono))
                    {
                        <a href="tel:@Model.Telefono" class="btn btn-sm btn-success">
                            <i class="bi bi-telephone"></i> Llamar
                        </a>
                    }
                    <a asp-controller="Productos" asp-action="Index" class="btn btn-sm btn-info">
                        <i class="bi bi-box-seam"></i> Ver Todos los Productos
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
